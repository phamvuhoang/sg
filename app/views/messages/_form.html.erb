<h2>Send message to <%= @recipient.name %></h2>

<%= form_for [@recipient, current_user.sent_messages.build] do |f| %>

  <div class="form-group">
    <%= f.label :body %><br>
    <%= f.text_field :body, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Send", class: "btn btn-lg btn-primary" %>
  </div>

<% end %>